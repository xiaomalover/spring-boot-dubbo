<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--suppress SqlNoDataSourceInspection, SqlDialectInspection -->
<mapper namespace="com.weison.provider.mapper.UserMapper">

    <insert id="insert" parameterType="com.weison.base.domain.User">
        insert into
            user_info (username, password, mobile, created_at)
        values(
            #{username,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR},
            #{mobile,jdbcType=VARCHAR},
            #{createdAt, jdbcType=INTEGER}
        )
    </insert>

    <select id="queryAll" resultType="com.weison.base.domain.User">
        SELECT  * from user_info
    </select>

    <select id="selectByPrimaryKey" resultType="com.weison.base.domain.User" parameterType="int">
        SELECT  * from user_info where id = #{id}
    </select>

    <select id="selectByUsername" resultType="com.weison.base.domain.User" parameterType="String">
        SELECT  * from user_info where username = #{username}
    </select>

    <select id="selectByMobile" resultType="com.weison.base.domain.User" parameterType="String">
        SELECT  * from user_info where mobile = #{mobile}
    </select>

    <select id="selectByUsernameOrMobile" resultType="com.weison.base.domain.User" parameterType="String">
        SELECT  * from user_info where username = #{acount} OR mobile = #{account}
    </select>

</mapper>